@import url("https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700&display=swap");

@tailwind base;
@tailwind components;
@tailwind utilities;

.text-gradient {
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

*::selection {
  @apply bg-zinc-500/25 text-zinc-900 dark:bg-zinc-200/25 dark:text-zinc-50;
}

*::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}
*::-webkit-scrollbar-track {
  background: transparent;
}
*::-webkit-scrollbar-thumb {
  @apply bg-gray-300 hover:bg-gray-400 dark:bg-gray-700 dark:hover:bg-gray-600 rounded-md;
}

body {
  @apply bg-gray-100;
  &::-webkit-scrollbar-thumb {
    @apply bg-gray-300 hover:bg-gray-400;
  }
  min-height: 100vh;
}
body.dark {
  @apply bg-gray-850;
  &::-webkit-scrollbar-thumb {
    @apply bg-gray-700 hover:bg-gray-600 rounded-md;
  }
}

